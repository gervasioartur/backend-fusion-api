{
  "name": "backend-fusion-api",
  "version": "1.0.0",
  "description": "Backend API that allows the creation, management, and visualization of a galaxy inspired by Star Wars, including planets, star systems, characters, and spaceships.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm run test -- ----watchAll",
    "test:staged": "npm run test -- --bail --findRelatedTests ./src",
    "test:coverage": "npm run test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gervasioartur/backend-fusion-api.git"
  },
  "author": "Gervasio Artur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gervasioartur/backend-fusion-api/issues"
  },
  "homepage": "https://github.com/gervasioartur/backend-fusion-api#readme",
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "express": "^4.21.1",
    "http": "^0.0.1-security",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "ts-debug": "^1.3.0",
    "ts-jest-mocker": "^1.0.0",
    "typeorm": "^0.3.20"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
